{
  "name": "vue3-lazy",
  "version": "1.0.0-alpha.1",
  "description": "",
  "keywords": [],
  "main": "dist/vue-lazy.umd.js",
  "module": "dist/vue-lazy.es5.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "author": "ustbhuangyi <280309453@qq.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "dev": "webpack-dev-server --config example/webpack.config.js --host 0.0.0.0",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "pub": "sh release.sh"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "colors": "^1.4.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.11",
    "cross-env": "^7.0.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-config": "^25.1.0",
    "lint-staged": "^10.0.8",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.0.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^5.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "shelljs": "^0.8.3",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webpack": "^5.75.0",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "ts-loader": "^9.4.2",
    "css-loader": "^6.7.3",
    "style-loader": "^1.1.3",
    "stylus-loader": "^7.1.0",
    "stylus": "^0.54.7",
    "express": "^4.17.1",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "vue": "^3.0.0-alpha.10",
    "@vue/compiler-sfc": "^3.0.0-alpha.10",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.2",
    "url-loader": "^4.1.1",
    "vue-loader": "^16.0.0-alpha.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.10.1",
    "better-scroll": "^2.0.0-beta.6"
  },
  "peerDependencies": {
    "vue": "^3.0.0-alpha.9"
  }
}
